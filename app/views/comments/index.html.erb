<div class="page-header">
  <h1>
    Comments
    <a href="/comments/new" class="btn btn-lg btn-success">New Comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Photo</th>
        <th>Commenter</th>
        <th>Actions</th>
      </tr>

      <% @comments.each do |comment| %>
      <tr>
        <td>
          <% if comment.user_with_makes_comments.present? %>
            <a href="/users/<%= comment.user_with_makes_comments.id %>">
              <%= comment.user_with_makes_comments.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if comment.photo_with_comments.present? %>
            <a href="/photos/<%= comment.photo_with_comments.id %>">
              <%= comment.photo_with_comments.user_id %>
            </a>
          <% end %>
        </td>
        <td><%= comment.commenter_id %></td>
        <td>
          <a href="/comments/<%= comment.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == comment.user_with_makes_comments %>
            <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
